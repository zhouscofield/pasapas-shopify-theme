{% comment %}
  页脚区块 - 极简设计
  修改LOGO文字在这里
{% endcomment %}

{%- liquid
  assign logo_text = section.settings.logo_text | default: 'PAS A PAS'
-%}

<footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="footer-main">
    {% comment %} 左侧 Logo {% endcomment %}
    <div class="footer-logo">
      <a href="{{ routes.root_url }}" class="footer-logo-link">
        {{ logo_text }}
      </a>
    </div>

    {% comment %} 右侧社交图标 {% endcomment %}
    <div class="footer-social">
      {% if settings.social_instagram_link != blank %}
        <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
        </a>
      {% endif %}
      
      {% if settings.social_tiktok_link != blank %}
        <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener" aria-label="TikTok">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
          </svg>
        </a>
      {% endif %}
      
      {% if settings.social_line_link != blank %}
        <a href="{{ settings.social_line_link }}" target="_blank" rel="noopener" aria-label="LINE">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.365 9.989c.34 0 .611.275.611.616 0 .341-.271.617-.611.617-.339 0-.611-.276-.611-.617 0-.341.272-.616.611-.616zm-6.107 5.037c-.34 0-.611-.276-.611-.617 0-.341.271-.616.611-.616.34 0 .611.275.611.616 0 .341-.271.617-.611.617zm0-2.468c-.34 0-.611-.276-.611-.617 0-.34.271-.616.611-.616.34 0 .611.275.611.616 0 .34-.271.617-.611.617zm-2.443 2.468c-.34 0-.611-.276-.611-.617 0-.341.271-.616.611-.616.34 0 .611.275.611.616 0 .341-.271.617-.611.617zm0-2.468c-.34 0-.611-.276-.611-.617 0-.34.271-.616.611-.616.34 0 .611.275.611.616 0 .34-.271.617-.611.617zm-2.443 2.468c-.34 0-.611-.276-.611-.617 0-.341.271-.616.611-.616.34 0 .611.275.611.616 0 .341-.271.617-.611.617zm0-2.468c-.34 0-.611-.276-.611-.617 0-.34.271-.616.611-.616.34 0 .611.275.611.616 0 .34-.271.617-.611.617zM12 2C6.477 2 2 6.145 2 11.269c0 2.935 1.601 5.563 4.113 7.308l-.013 2.458s-.037.988.612.613c.65-.375 2.325-1.912 2.325-1.912.688.188 1.418.29 2.163.29h.004c5.523 0 10-4.145 10-9.269C22 6.145 17.523 2 12 2z"/>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>

  {% comment %} 底部链接 {% endcomment %}
  <div class="footer-bottom">
    <div class="footer-links">
      <span>&copy; {{ "now" | date: "%Y" }} {{ logo_text }}</span>
      <a href="/pages/shipping">{{ 'footer.shipping' | t }}</a>
      <a href="/pages/returns">{{ 'footer.returns' | t }}</a>
      <a href="/pages/contact">{{ 'footer.contact' | t }}</a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #000000;
    padding: 60px 40px 40px;
    border-top: 1px solid #222222;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 40px 20px;
    }
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1600px;
    margin: 0 auto 40px;
  }

  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      gap: 30px;
      margin-bottom: 30px;
    }
  }

  /* Logo */
  .footer-logo-link {
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #FFFFFF;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition: opacity 0.3s ease;
  }

  .footer-logo-link:hover {
    opacity: 0.7;
  }

  /* 社交图标 */
  .footer-social {
    display: flex;
    gap: 24px;
  }

  .footer-social a {
    color: #FFFFFF;
    transition: opacity 0.3s ease;
  }

  .footer-social a:hover {
    opacity: 0.7;
  }

  /* 底部链接 */
  .footer-bottom {
    max-width: 1600px;
    margin: 0 auto;
    padding-top: 30px;
    border-top: 1px solid #222222;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .footer-links {
      gap: 16px;
    }
  }

  .footer-links span,
  .footer-links a {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #FFFFFF;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo文字",
      "default": "PAS A PAS",
      "info": "修改LOGO文字在这里"
    }
  ]
}
{% endschema %}
