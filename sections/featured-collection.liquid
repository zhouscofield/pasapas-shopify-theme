{% comment %}
  产品网格区块 - 非对称布局
  产品网格布局逻辑：Desktop 3列，第2列margin-top: 100px
{% endcomment %}

{%- liquid
  assign title = section.settings.title | default: 'NEW DROP'
  assign collection_handle = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 6
  assign columns_desktop = section.settings.columns_desktop | default: 3
  assign columns_mobile = section.settings.columns_mobile | default: 1
  assign show_view_all = section.settings.show_view_all
  assign view_all_text = section.settings.view_all_text | default: 'VIEW ALL'

  if collection_handle != blank
    assign collection = collections[collection_handle]
  endif
-%}

<section class="featured-collection-section" data-section-id="{{ section.id }}" data-section-type="featured-collection">
  {% if title != blank %}
    <h2 class="collection-title">{{ title }}</h2>
  {% endif %}

  {% comment %} 产品网格布局逻辑 {% endcomment %}
  <div class="product-grid" data-columns-desktop="{{ columns_desktop }}" data-columns-mobile="{{ columns_mobile }}">
    {% if collection != blank and collection.products.size > 0 %}
      {% for product in collection.products limit: products_to_show %}
        {% comment %} 计算是否为第2列（错落布局）{% endcomment %}
        {% assign column_index = forloop.index | modulo: columns_desktop %}
        {% if column_index == 0 %}
          {% assign column_index = columns_desktop %}
        {% endif %}
        {% assign is_second_column = false %}
        {% if column_index == 2 %}
          {% assign is_second_column = true %}
        {% endif %}
        
        <div class="product-grid-item{% if is_second_column %} offset{% endif %}">
          {% render 'product-card', 
            product: product,
            show_quick_add: true
          %}
        </div>
      {% endfor %}
    {% else %}
      {% comment %} 占位产品（预览用）{% endcomment %}
      {% for i in (1..products_to_show) %}
        {% assign column_index = forloop.index | modulo: columns_desktop %}
        {% if column_index == 0 %}
          {% assign column_index = columns_desktop %}
        {% endif %}
        {% assign is_second_column = false %}
        {% if column_index == 2 %}
          {% assign is_second_column = true %}
        {% endif %}
        
        <div class="product-grid-item{% if is_second_column %} offset{% endif %}">
          <div class="product-card-placeholder">
            <div class="placeholder-image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="placeholder-info">
              <span class="placeholder-title">PRODUCT NAME</span>
              <span class="placeholder-price">¥9,900</span>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  {% if show_view_all and collection != blank %}
    <div class="view-all-wrapper">
      <a href="{{ collection.url }}" class="view-all-link">
        {{ view_all_text }}
      </a>
    </div>
  {% endif %}
</section>

<style>
  .featured-collection-section {
    padding: 120px 40px;
    background: #000000;
  }

  @media (max-width: 768px) {
    .featured-collection-section {
      padding: 80px 20px;
    }
  }

  /* 标题 */
  .collection-title {
    font-family: 'Inter', sans-serif;
    font-size: 8vw;
    font-weight: 900;
    text-transform: uppercase;
    text-align: center;
    color: #FFFFFF;
    margin: 0 0 80px;
    letter-spacing: 0.02em;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .collection-title {
      font-size: 12vw;
      margin-bottom: 40px;
    }
  }

  /* 产品网格布局逻辑 */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2px;
    max-width: 1600px;
    margin: 0 auto;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  /* 第2列错落效果 - Desktop only */
  .product-grid-item.offset {
    margin-top: 100px;
  }

  @media (max-width: 1024px) {
    .product-grid-item.offset {
      margin-top: 50px;
    }
  }

  @media (max-width: 768px) {
    .product-grid-item.offset {
      margin-top: 0;
    }
  }

  /* 占位产品样式 */
  .product-card-placeholder {
    position: relative;
  }

  .placeholder-image {
    aspect-ratio: 3/4;
    background: #111111;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-svg {
    width: 60%;
    height: 60%;
    fill: #333333;
  }

  .placeholder-info {
    padding: 16px 0;
    text-align: center;
  }

  .placeholder-title {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
  }

  .placeholder-price {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 300;
    color: #888888;
  }

  /* View All 链接 */
  .view-all-wrapper {
    text-align: center;
    margin-top: 80px;
  }

  .view-all-link {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-decoration: none;
    padding: 16px 40px;
    border: 1px solid #FFFFFF;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    background: #FFFFFF;
    color: #000000;
  }
</style>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "NEW DROP"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "选择集合"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "显示产品数量",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 6
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "桌面端列数",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "移动端列数",
      "options": [
        {
          "value": "1",
          "label": "1列"
        },
        {
          "value": "2",
          "label": "2列"
        }
      ],
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "显示"查看全部"链接",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "查看全部文字",
      "default": "VIEW ALL"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
