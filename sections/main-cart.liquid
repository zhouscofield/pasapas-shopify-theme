{% comment %}
  购物车页面主区块
{% endcomment %}

<section class="main-cart-section">
  <div class="container">
    <h1 class="page-title">{{ 'cart.general.title' | t }}</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-items">
          {% for item in cart.items %}
            <div class="cart-page-item">
              <div class="item-image">
                {% if item.image %}
                  {{ item.image | image_url: width: 200 | image_tag:
                    loading: 'lazy',
                    alt: item.title | escape
                  }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              
              <div class="item-details">
                <h3 class="item-title">
                  <a href="{{ item.url }}">{{ item.product.title | upcase }}</a>
                </h3>
                
                {% if item.variant.title != 'Default Title' %}
                  <p class="item-variant">{{ item.variant.title | upcase }}</p>
                {% endif %}
                
                <div class="item-price">{{ item.final_line_price | money_without_trailing_zeros }}</div>
              </div>
              
              <div class="item-actions">
                <input 
                  type="number" 
                  name="updates[]" 
                  value="{{ item.quantity }}"
                  min="0"
                  class="item-quantity"
                  aria-label="Quantity"
                >
                
                <a href="{{ item.url_to_remove }}" class="item-remove">
                  {{ 'cart.general.remove' | t }}
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
        
        <div class="cart-footer">
          {% if section.settings.show_note %}
            <div class="cart-note-wrapper">
              <label for="CartNote">{{ 'cart.general.note' | t }}</label>
              <textarea name="note" id="CartNote" class="cart-note">{{ cart.note }}</textarea>
            </div>
          {% endif %}
          
          <div class="cart-summary">
            <div class="cart-subtotal">
              <span>{{ 'cart.general.subtotal' | t }}</span>
              <span class="subtotal-amount">{{ cart.total_price | money_without_trailing_zeros }}</span>
            </div>
            
            <p class="cart-note-text">{{ 'cart.general.shipping_note' | t }}</p>
            
            <div class="cart-buttons">
              <button type="submit" name="update" class="button button--secondary">
                {{ 'cart.general.update' | t }}
              </button>
              <button type="submit" name="checkout" class="button">
                {{ 'cart.general.checkout' | t }}
              </button>
            </div>
          </div>
        </div>
      </form>
    {% else %}
      <div class="cart-empty">
        <p>{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="button">
          {{ 'cart.general.continue_shopping' | t }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .main-cart-section {
    padding: 120px 40px;
    background: #000000;
    min-height: 100vh;
  }

  @media (max-width: 768px) {
    .main-cart-section {
      padding: 100px 20px 60px;
    }
  }

  .cart-form {
    max-width: 1000px;
    margin: 0 auto;
  }

  .cart-items {
    border-top: 1px solid #222222;
  }

  .cart-page-item {
    display: grid;
    grid-template-columns: 120px 1fr auto;
    gap: 24px;
    padding: 24px 0;
    border-bottom: 1px solid #222222;
    align-items: center;
  }

  @media (max-width: 768px) {
    .cart-page-item {
      grid-template-columns: 80px 1fr;
      gap: 16px;
    }
  }

  .item-image {
    aspect-ratio: 3/4;
    background: #111111;
    overflow: hidden;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .item-image .placeholder-svg {
    width: 100%;
    height: 100%;
    fill: #333333;
  }

  .item-title {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
  }

  .item-title a {
    color: #FFFFFF;
    transition: opacity 0.3s ease;
  }

  .item-title a:hover {
    opacity: 0.7;
  }

  .item-variant {
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    color: #888888;
    margin: 0 0 12px;
  }

  .item-price {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    color: #FFFFFF;
  }

  .item-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 12px;
  }

  @media (max-width: 768px) {
    .item-actions {
      grid-column: 1 / -1;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .item-quantity {
    width: 80px;
    height: 44px;
    background: transparent;
    border: 1px solid #FFFFFF;
    color: #FFFFFF;
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
  }

  .item-remove {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .item-remove:hover {
    color: #FFFFFF;
  }

  .cart-footer {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 40px;
    margin-top: 40px;
  }

  @media (max-width: 1024px) {
    .cart-footer {
      grid-template-columns: 1fr;
    }
  }

  .cart-note-wrapper label {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 12px;
  }

  .cart-note {
    width: 100%;
    min-height: 120px;
    background: transparent;
    border: 1px solid #FFFFFF;
    color: #FFFFFF;
    padding: 16px;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    resize: vertical;
  }

  .cart-summary {
    text-align: right;
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
    border-top: 1px solid #222222;
    border-bottom: 1px solid #222222;
    margin-bottom: 24px;
  }

  .cart-subtotal span:first-child {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .subtotal-amount {
    font-family: 'Inter', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: #FFFFFF;
  }

  .cart-note-text {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #888888;
    margin: 0 0 24px;
  }

  .cart-buttons {
    display: flex;
    gap: 16px;
    justify-content: flex-end;
  }

  @media (max-width: 768px) {
    .cart-buttons {
      flex-direction: column;
    }
  }

  .cart-empty {
    text-align: center;
    padding: 80px 20px;
  }

  .cart-empty p {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    color: #888888;
    margin: 0 0 32px;
  }
</style>

{% schema %}
{
  "name": "Main Cart",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_note",
      "label": "Show cart note",
      "default": true
    }
  ]
}
{% endschema %}
