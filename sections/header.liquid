{% comment %}
  导航栏区块 - 透明背景，滚动变黑
  修改LOGO文字在这里
{% endcomment %}

{% liquid
  assign logo_text = section.settings.logo_text | default: 'PAS A PAS'
%}

<header class="site-header" data-section-id="{{ section.id }}" data-section-type="header">
  <div class="header-wrapper">
    {% comment %} 左侧 - 汉堡菜单按钮 {% endcomment %}
    <button type="button" class="header-menu-toggle" aria-label="{{ 'general.navigation.toggle' | t }}" aria-expanded="false">
      {% render 'icon-menu' %}
    </button>

    {% comment %} 中间 - Logo {% endcomment %}
    <div class="header-logo">
      <a href="{{ routes.root_url }}" class="header-logo-link">
        {{ logo_text }}
      </a>
    </div>

    {% comment %} 右侧 - 搜索和购物车 {% endcomment %}
    <div class="header-icons">
      <a href="{{ routes.search_url }}" class="header-icon" aria-label="{{ 'general.search.search' | t }}">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
      </a>
      <button type="button" class="header-icon cart-toggle" aria-label="{{ 'cart.general.title' | t }}" data-cart-toggle>
        {% render 'icon-cart' %}
        <span class="cart-count{% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>
          {{ cart.item_count }}
        </span>
      </button>
    </div>
  </div>
</header>

{% comment %} 全屏菜单 {% endcomment %}
<div class="fullscreen-menu" data-fullscreen-menu>
  <div class="fullscreen-menu-header">
    <button type="button" class="menu-close" aria-label="{{ 'general.navigation.close' | t }}">
      {% render 'icon-close' %}
    </button>
  </div>
  
  <nav class="fullscreen-menu-nav">
    <ul class="menu-list">
      {% if section.settings.menu != blank and linklists[section.settings.menu] != blank %}
        {% for link in linklists[section.settings.menu].links %}
          <li class="menu-item">
            <a href="{{ link.url }}" class="menu-link">{{ link.title | upcase }}</a>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </nav>

  {% if section.settings.show_social %}
    <div class="fullscreen-menu-social">
      {% if settings.social_instagram_link != blank %}
        <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener">INSTAGRAM</a>
      {% endif %}
      {% if settings.social_tiktok_link != blank %}
        <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener">TIKTOK</a>
      {% endif %}
      {% if settings.social_line_link != blank %}
        <a href="{{ settings.social_line_link }}" target="_blank" rel="noopener">LINE</a>
      {% endif %}
    </div>
  {% endif %}
</div>

<style>
  /* 导航栏样式 */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 20px 40px;
    transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
  }

  @media (max-width: 768px) {
    .site-header {
      padding: 16px 20px;
    }
  }

  .site-header.scrolled {
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }

  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1920px;
    margin: 0 auto;
  }

  /* 汉堡菜单按钮 */
  .header-menu-toggle {
    background: none;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .header-menu-toggle:hover {
    opacity: 0.7;
  }

  /* Logo */
  .header-logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .header-logo-link {
    font-family: 'Inter', sans-serif;
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #FFFFFF;
    text-decoration: none;
    text-transform: uppercase;
    transition: opacity 0.3s ease;
  }

  .header-logo-link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header-logo-link {
      font-size: 18px;
      letter-spacing: 0.15em;
    }
  }

  /* 右侧图标 */
  .header-icons {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .header-icon {
    position: relative;
    color: #FFFFFF;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
    text-decoration: none;
  }

  .header-icon:hover {
    opacity: 0.7;
  }

  .cart-count {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 16px;
    height: 16px;
    background: #FFFFFF;
    color: #000000;
    font-size: 10px;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
  }

  .cart-count.hidden {
    display: none;
  }

  /* 全屏菜单 */
  .fullscreen-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000000;
    z-index: 2000;
    display: flex;
    flex-direction: column;
    padding: 40px;
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .fullscreen-menu.active {
    transform: translateX(0);
  }

  .fullscreen-menu-header {
    display: flex;
    justify-content: flex-end;
  }

  .menu-close {
    background: none;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.3s ease;
  }

  .menu-close:hover {
    opacity: 0.7;
  }

  .fullscreen-menu-nav {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .menu-item {
    margin: 24px 0;
  }

  .menu-link {
    font-family: 'Inter', sans-serif;
    font-size: clamp(32px, 6vw, 72px);
    font-weight: 900;
    color: #FFFFFF;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1;
    transition: opacity 0.3s ease;
    display: inline-block;
  }

  .menu-link:hover {
    opacity: 0.5;
  }

  .fullscreen-menu-social {
    display: flex;
    justify-content: center;
    gap: 40px;
    padding-bottom: 40px;
  }

  .fullscreen-menu-social a {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: #888888;
    text-decoration: none;
    letter-spacing: 0.15em;
    transition: color 0.3s ease;
  }

  .fullscreen-menu-social a:hover {
    color: #FFFFFF;
  }

  /* 菜单打开时禁止背景滚动 */
  body.menu-open {
    overflow: hidden;
  }
</style>

<script>
  // 导航交互逻辑
  (function() {
    const header = document.querySelector('.site-header');
    const menuToggle = document.querySelector('.header-menu-toggle');
    const menuClose = document.querySelector('.menu-close');
    const fullscreenMenu = document.querySelector('.fullscreen-menu');
    const menuLinks = document.querySelectorAll('.menu-link');

    // 滚动监听 - 超过100px添加scrolled类
    window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    // 打开菜单
    menuToggle.addEventListener('click', function() {
      fullscreenMenu.classList.add('active');
      document.body.classList.add('menu-open');
      menuToggle.setAttribute('aria-expanded', 'true');
    });

    // 关闭菜单
    function closeMenu() {
      fullscreenMenu.classList.remove('active');
      document.body.classList.remove('menu-open');
      menuToggle.setAttribute('aria-expanded', 'false');
    }

    menuClose.addEventListener('click', closeMenu);

    // 点击菜单链接后关闭
    menuLinks.forEach(function(link) {
      link.addEventListener('click', closeMenu);
    });

    // ESC键关闭菜单
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && fullscreenMenu.classList.contains('active')) {
        closeMenu();
      }
    });
  })();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo文字",
      "default": "PAS A PAS",
      "info": "修改LOGO文字在这里"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "菜单",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "显示社交链接",
      "default": true
    }
  ]
}
{% endschema %}
