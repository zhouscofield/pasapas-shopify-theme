<!DOCTYPE html>
<html>
<head>
  <title>{{ shop.name }}</title>
  {{ content_for_header }}
  <style>
    body { 
      background: #000; 
      color: #fff; 
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
    }
    .hero {
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .hero h1 {
      font-size: 15vw;
      font-weight: 900;
      letter-spacing: -0.05em;
      line-height: 0.85;
      margin: 0;
    }
    .subtitle {
      position: absolute;
      bottom: 40px;
      font-size: 12px;
      letter-spacing: 0.3em;
      opacity: 0.7;
    }
    .products {
      padding: 100px 40px;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2px;
    }
    .product {
      aspect-ratio: 3/4;
      background: #111;
      position: relative;
      overflow: hidden;
    }
    .product img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%);
      transition: all 0.6s;
    }
    .product:hover img {
      filter: grayscale(0%);
      transform: scale(1.02);
    }
    .product-info {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 20px;
      background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
      transform: translateY(100%);
      transition: transform 0.3s;
    }
    .product:hover .product-info {
      transform: translateY(0);
    }
    @media (max-width: 768px) {
      .products { grid-template-columns: 1fr; }
      .hero h1 { font-size: 20vw; }
    }
  </style>
</head>
<body>
  <!-- 导航 -->
  <header style="position: fixed; top: 0; left: 0; right: 0; padding: 20px; display: flex; justify-content: space-between; align-items: center; z-index: 100; mix-blend-mode: difference; color: white;">
    <div style="width: 100px;"></div>
    <div style="font-size: 20px; font-weight: 700; letter-spacing: 0.3em;">PAS A PAS</div>
    <a href="/cart" style="width: 100px; text-align: right; font-size: 12px; letter-spacing: 0.1em;">BAG ({{ cart.item_count }})</a>
  </header>

  <!-- Hero -->
  <section class="hero">
    <h1>PAS<br>A PAS</h1>
    <div class="subtitle">AUTUMN / WINTER 2024</div>
  </section>

  <!-- 产品网格 -->
  <section style="padding: 100px 40px; background: #000;">
    <h2 style="font-size: 8vw; text-align: center; margin-bottom: 60px;">NEW DROP</h2>
    
    <div class="products">
      {% for product in collections.all.products limit: 6 %}
        <a href="{{ product.url }}" class="product">
          <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
          <div class="product-info">
            <h3 style="font-size: 12px; margin-bottom: 5px;">{{ product.title | upcase }}</h3>
            <p style="font-size: 16px; font-weight: 300;">¥{{ product.price | money_without_currency }}</p>
          </div>
        </a>
      {% else %}
        <div style="grid-column: 1/-1; text-align: center; padding: 100px;">
          <p>NO PRODUCTS YET</p>
          <p style="margin-top: 20px; font-size: 14px; opacity: 0.5;">Please add products in admin</p>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- 页脚 -->
  <footer style="padding: 40px; text-align: center; font-size: 12px; color: #888; border-top: 1px solid #333;">
    <p>PAS A PAS © 2024</p>
  </footer>

  {{ content_for_footer }}
</body>
</html>
