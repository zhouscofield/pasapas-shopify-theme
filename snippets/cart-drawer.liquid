{% comment %}
  购物车抽屉 - 右侧滑出（AJAX）
  背景纯白，文字黑色
{% endcomment %}

<div class="cart-drawer-overlay" data-cart-overlay></div>

<div class="cart-drawer" data-cart-drawer>
  {% comment %} 头部 {% endcomment %}
  <div class="cart-drawer-header">
    <h2 class="cart-title">{{ 'cart.general.title' | t }}</h2>
    <button type="button" class="cart-close" data-cart-close aria-label="{{ 'cart.general.close' | t }}">
      {% render 'icon-close' %}
    </button>
  </div>

  {% comment %} 商品列表 {% endcomment %}
  <div class="cart-drawer-items" data-cart-items>
    {% if cart.item_count > 0 %}
      {% for item in cart.items %}
        <div class="cart-item" data-cart-item data-line="{{ forloop.index }}">
          {% comment %} 缩略图 {% endcomment %}
          <div class="cart-item-image">
            {% if item.image %}
              {{ item.image | image_url: width: 160 | image_tag:
                loading: 'lazy',
                alt: item.title | escape
              }}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>

          {% comment %} 信息区 {% endcomment %}
          <div class="cart-item-details">
            <h3 class="cart-item-title">{{ item.product.title | upcase }}</h3>
            
            {% if item.variant.title != 'Default Title' %}
              <p class="cart-item-variant">{{ item.variant.title | upcase }}</p>
            {% endif %}
            
            <div class="cart-item-quantity">
              <button type="button" class="quantity-btn" data-quantity-minus aria-label="Decrease">
                <svg width="10" height="10" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M2 6h8"/>
                </svg>
              </button>
              <span class="quantity-value" data-quantity-value>{{ item.quantity }}</span>
              <button type="button" class="quantity-btn" data-quantity-plus aria-label="Increase">
                <svg width="10" height="10" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M6 2v8M2 6h8"/>
                </svg>
              </button>
            </div>

            <p class="cart-item-price">{{ item.final_line_price | money_without_trailing_zeros }}</p>
          </div>

          {% comment %} 删除按钮 {% endcomment %}
          <button type="button" class="cart-item-remove" data-cart-remove aria-label="{{ 'cart.general.remove' | t }}">
            {% render 'icon-close' %}
          </button>
        </div>
      {% endfor %}
    {% else %}
      {% comment %} 空购物车 {% endcomment %}
      <div class="cart-empty" data-cart-empty>
        <p>{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="continue-shopping">
          {{ 'cart.general.continue_shopping' | t }}
        </a>
      </div>
    {% endif %}
  </div>

  {% comment %} 底部固定 {% endcomment %}
  {% if cart.item_count > 0 %}
    <div class="cart-drawer-footer" data-cart-footer>
      <div class="cart-subtotal">
        <span>{{ 'cart.general.subtotal' | t }}</span>
        <span class="subtotal-amount" data-cart-subtotal>{{ cart.total_price | money_without_trailing_zeros }}</span>
      </div>
      
      <p class="cart-note">{{ 'cart.general.shipping_note' | t }}</p>
      
      <a href="{{ routes.cart_url }}" class="checkout-button">
        {{ 'cart.general.checkout' | t }}
      </a>
      
      <button type="button" class="continue-link" data-cart-close>
        {{ 'cart.general.continue_shopping' | t }}
      </button>
    </div>
  {% endif %}
</div>

<style>
  /* 遮罩层 */
  .cart-drawer-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 3000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .cart-drawer-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* 购物车抽屉 */
  .cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 400px;
    height: 100vh;
    background: #FFFFFF;
    z-index: 3001;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (max-width: 480px) {
    .cart-drawer {
      width: 100%;
    }
  }

  .cart-drawer.active {
    transform: translateX(0);
  }

  /* 头部 */
  .cart-drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    border-bottom: 1px solid #EEEEEE;
  }

  .cart-title {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
  }

  .cart-close {
    background: none;
    border: none;
    color: #000000;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .cart-close:hover {
    opacity: 0.5;
  }

  /* 商品列表 */
  .cart-drawer-items {
    flex: 1;
    overflow-y: auto;
    padding: 20px 24px;
  }

  .cart-item {
    display: flex;
    gap: 16px;
    padding: 20px 0;
    border-bottom: 1px solid #EEEEEE;
  }

  .cart-item-image {
    width: 80px;
    height: 100px;
    background: #F5F5F5;
    flex-shrink: 0;
    overflow: hidden;
  }

  .cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item-image .placeholder-svg {
    width: 100%;
    height: 100%;
    fill: #CCCCCC;
  }

  .cart-item-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .cart-item-title {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #000000;
    text-transform: uppercase;
    margin: 0;
    line-height: 1.3;
  }

  .cart-item-variant {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #888888;
    margin: 0;
  }

  .cart-item-quantity {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 8px;
  }

  .quantity-btn {
    width: 24px;
    height: 24px;
    background: #F5F5F5;
    border: none;
    color: #000000;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  .quantity-btn:hover {
    background: #EEEEEE;
  }

  .quantity-value {
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    color: #888888;
    min-width: 20px;
    text-align: center;
  }

  .cart-item-price {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #000000;
    margin: 8px 0 0;
  }

  .cart-item-remove {
    background: none;
    border: none;
    color: #888888;
    cursor: pointer;
    padding: 4px;
    align-self: flex-start;
    transition: color 0.3s ease;
  }

  .cart-item-remove:hover {
    color: #000000;
  }

  /* 空购物车 */
  .cart-empty {
    text-align: center;
    padding: 60px 20px;
  }

  .cart-empty p {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: #888888;
    margin: 0 0 24px;
  }

  .continue-shopping {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 600;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: underline;
  }

  /* 底部 */
  .cart-drawer-footer {
    padding: 24px;
    border-top: 1px solid #EEEEEE;
    background: #FFFFFF;
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .cart-subtotal span:first-child {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .subtotal-amount {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #000000;
  }

  .cart-note {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    color: #888888;
    margin: 0 0 20px;
  }

  .checkout-button {
    display: block;
    width: 100%;
    height: 56px;
    background: #000000;
    border: 1px solid #000000;
    color: #FFFFFF;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    text-align: center;
    line-height: 54px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 16px;
  }

  .checkout-button:hover {
    background: #FFFFFF;
    color: #000000;
  }

  .continue-link {
    display: block;
    width: 100%;
    background: none;
    border: none;
    color: #000000;
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: underline;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.3s ease;
  }

  .continue-link:hover {
    opacity: 0.5;
  }

  /* 禁止背景滚动 */
  body.cart-open {
    overflow: hidden;
  }
</style>
