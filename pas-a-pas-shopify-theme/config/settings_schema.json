[
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors",
        "info": "修改主色调在此"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text_muted",
        "label": "Muted Text Color",
        "default": "#888888"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#222222"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading Font",
        "default": "inter_n4"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body Font",
        "default": "inter_n4"
      },
      {
        "type": "range",
        "id": "type_base_size",
        "label": "Base Font Size",
        "min": 12,
        "max": 20,
        "step": 1,
        "default": 16,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "header",
        "content": "Homepage Hero"
      },
      {
        "type": "select",
        "id": "hero_type",
        "label": "Hero Background Type",
        "options": [
          {
            "value": "image",
            "label": "Image"
          },
          {
            "value": "video",
            "label": "Video"
          }
        ],
        "default": "image"
      },
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      },
      {
        "type": "text",
        "id": "hero_video_url",
        "label": "Hero Video URL",
        "info": "Enter MP4 video URL"
      },
      {
        "type": "text",
        "id": "hero_heading_line1",
        "label": "Heading Line 1",
        "default": "PAS"
      },
      {
        "type": "text",
        "id": "hero_heading_line2",
        "label": "Heading Line 2",
        "default": "A PAS"
      },
      {
        "type": "text",
        "id": "hero_subtitle",
        "label": "Subtitle",
        "default": "AUTUMN / WINTER 2024"
      },
      {
        "type": "checkbox",
        "id": "hero_show_scroll_indicator",
        "label": "Show Scroll Indicator",
        "default": true
      },
      {
        "type": "range",
        "id": "hero_overlay_opacity",
        "label": "Overlay Opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "default": 0,
        "unit": "%"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram URL",
        "default": "https://instagram.com"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok URL",
        "default": "https://tiktok.com"
      },
      {
        "type": "text",
        "id": "social_line_link",
        "label": "LINE URL",
        "default": "https://line.me"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube URL"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "checkbox",
        "id": "cart_type_drawer",
        "label": "Use Cart Drawer",
        "default": true,
        "info": "If disabled, cart will use page template"
      },
      {
        "type": "checkbox",
        "id": "cart_show_vendor",
        "label": "Show Vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "cart_show_note",
        "label": "Show Cart Note",
        "default": true
      }
    ]
  },
  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product Settings"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show Vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_sku",
        "label": "Show SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_size_guide",
        "label": "Show Size Guide",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_enable_zoom",
        "label": "Enable Image Zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_enable_sticky_info",
        "label": "Enable Sticky Product Info",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_recommendations",
        "label": "Show Product Recommendations",
        "default": true
      }
    ]
  },
  {
    "name": "Notify Me",
    "settings": [
      {
        "type": "header",
        "content": "Notify When Available"
      },
      {
        "type": "checkbox",
        "id": "notify_me_enabled",
        "label": "Enable Notify Me",
        "default": true
      },
      {
        "type": "text",
        "id": "notify_me_email",
        "label": "Notification Email",
        "info": "Email to receive notifications (optional)"
      },
      {
        "type": "text",
        "id": "notify_me_tag",
        "label": "Customer Tag",
        "default": "notify_when_available",
        "info": "Tag to add to customers who request notifications"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px recommended"
      }
    ]
  },
  {
    "name": "Currency",
    "settings": [
      {
        "type": "header",
        "content": "Currency Settings"
      },
      {
        "type": "checkbox",
        "id": "currency_show_symbols",
        "label": "Show Currency Symbols",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "currency_show_code",
        "label": "Show Currency Code",
        "default": false
      }
    ]
  }
]
