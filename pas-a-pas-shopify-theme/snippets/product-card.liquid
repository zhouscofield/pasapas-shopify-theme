{% comment %}
  产品卡片片段 - 黑白滤镜hover效果
  参数:
  - product: 产品对象
  - show_quick_add: 是否显示快速加购按钮
{% endcomment %}

{%- liquid
  assign show_quick_add = show_quick_add | default: true
  assign product_image = product.featured_image | default: product.images.first
-%}

<div class="product-card" data-product-card data-product-handle="{{ product.handle }}" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
  <a href="{{ product.url }}" class="product-card-link">
    {% comment %} 产品图片 {% endcomment %}
    <div class="product-card-image-wrapper">
      {% if product_image != blank %}
        {{ product_image | image_url: width: 800 | image_tag:
          loading: 'lazy',
          class: 'product-card-image',
          alt: product.title | escape,
          sizes: '(min-width: 1200px) 33vw, (min-width: 768px) 50vw, 100vw'
        }}
      {% else %}
        <div class="product-card-placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
      
      {% comment %} Hover信息层 {% endcomment %}
      <div class="product-card-overlay">
        <div class="product-card-info">
          <h3 class="product-card-title">{{ product.title | upcase }}</h3>
          <p class="product-card-price">{{ product.price | money_without_trailing_zeros }}</p>
        </div>
        
        {% comment %} Quick Add按钮 {% endcomment %}
        {% if show_quick_add %}
          {% if product.has_only_default_variant %}
            <button 
              type="button" 
              class="quick-add-button"
              data-quick-add
              aria-label="{{ 'products.product.quick_add' | t }}"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"/>
              </svg>
            </button>
          {% else %}
            <a href="{{ product.url }}" class="quick-add-button view-options">
              <span>{{ 'products.product.view_options' | t }}</span>
            </a>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </a>
</div>

<style>
  .product-card {
    position: relative;
  }

  .product-card-link {
    display: block;
    text-decoration: none;
  }

  .product-card-image-wrapper {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: #111111;
  }

  .product-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* 默认黑白滤镜 */
    filter: grayscale(100%) contrast(1.1);
    transition: filter 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover .product-card-image {
    /* Hover时恢复彩色 */
    filter: grayscale(0%) contrast(1);
    transform: scale(1.02);
  }

  .product-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #111111;
  }

  .product-card-placeholder .placeholder-svg {
    width: 60%;
    height: 60%;
    fill: #333333;
  }

  /* Hover信息层 - 默认隐藏 */
  .product-card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.8);
    padding: 20px;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .product-card:hover .product-card-overlay {
    transform: translateY(0);
  }

  .product-card-info {
    flex: 1;
  }

  .product-card-title {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .product-card-price {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 300;
    color: #888888;
    margin: 0;
  }

  /* Quick Add按钮 */
  .quick-add-button {
    width: 44px;
    height: 44px;
    background: #FFFFFF;
    border: none;
    color: #000000;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
    margin-left: 16px;
  }

  .quick-add-button:hover {
    background: #888888;
    color: #FFFFFF;
  }

  .quick-add-button.view-options {
    width: auto;
    padding: 0 20px;
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
  }

  /* 触摸设备优化 */
  @media (pointer: coarse) {
    .product-card-overlay {
      transform: translateY(0);
      background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
      padding: 30px 20px 20px;
    }
  }
</style>
