{% comment %}
  Hero区块 - 全屏超大字Hero
  支持视频或图片背景，mix-blend-mode文字效果
{% endcomment %}

{%- liquid
  assign hero_type = section.settings.hero_type
  assign image = section.settings.image
  assign video_url = section.settings.video_url
  assign heading_line1 = section.settings.heading_line1 | default: 'PAS'
  assign heading_line2 = section.settings.heading_line2 | default: 'A PAS'
  assign subtitle = section.settings.subtitle | default: 'AUTUMN / WINTER 2024'
  assign show_scroll_indicator = section.settings.show_scroll_indicator
  assign overlay_opacity = section.settings.overlay_opacity | default: 0
-%}

<section class="hero-section" data-section-id="{{ section.id }}" data-section-type="hero">
  {% comment %} 背景层 {% endcomment %}
  <div class="hero-background">
    {% if hero_type == 'video' and video_url != blank %}
      {% comment %} 视频背景 {% endcomment %}
      <div class="hero-video-wrapper">
        <video 
          autoplay 
          muted 
          loop 
          playsinline
          poster="{% if image %}{{ image | image_url: width: 1920 }}{% endif %}"
        >
          <source src="{{ video_url }}" type="video/mp4">
        </video>
      </div>
    {% elsif image != blank %}
      {% comment %} 图片背景 {% endcomment %}
      <div class="hero-image-wrapper">
        {{ image | image_url: width: 2880 | image_tag:
          loading: 'eager',
          fetchpriority: 'high',
          class: 'hero-image',
          sizes: '100vw'
        }}
      </div>
    {% else %}
      {% comment %} 默认黑色背景 {% endcomment %}
      <div class="hero-default-bg"></div>
    {% endif %}
    
    {% comment %} 遮罩层 {% endcomment %}
    {% if overlay_opacity > 0 %}
      <div class="hero-overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }}"></div>
    {% endif %}
  </div>

  {% comment %} 文字层 - mix-blend-mode: difference {% endcomment %}
  <div class="hero-content">
    <h1 class="hero-heading">
      <span class="hero-line hero-line-1">{{ heading_line1 }}</span>
      <span class="hero-line hero-line-2">{{ heading_line2 }}</span>
    </h1>
    
    {% if subtitle != blank %}
      <p class="hero-subtitle flash-animation">{{ subtitle }}</p>
    {% endif %}
  </div>

  {% comment %} Scroll指示器 {% endcomment %}
  {% if show_scroll_indicator %}
    <div class="hero-scroll-indicator">
      <span class="scroll-text">SCROLL</span>
      <div class="scroll-arrow">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </div>
  {% endif %}
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* 背景层 */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .hero-image-wrapper,
  .hero-video-wrapper {
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-video-wrapper video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-default-bg {
    width: 100%;
    height: 100%;
    background: #000000;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000000;
  }

  /* 文字层 */
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    mix-blend-mode: difference;
  }

  .hero-heading {
    margin: 0;
    font-family: 'Inter', sans-serif;
    font-weight: 900;
    text-transform: uppercase;
    line-height: 0.85;
    letter-spacing: -0.02em;
    color: #FFFFFF;
  }

  .hero-line {
    display: block;
  }

  .hero-line-1 {
    font-size: 15vw;
  }

  .hero-line-2 {
    font-size: 15vw;
  }

  @media (max-width: 1024px) {
    .hero-line-1,
    .hero-line-2 {
      font-size: 10vw;
    }
  }

  @media (max-width: 768px) {
    .hero-line-1,
    .hero-line-2 {
      font-size: 18vw;
    }
  }

  /* 副标题 */
  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #FFFFFF;
    margin-top: 40px;
    text-transform: uppercase;
  }

  /* Flash动画 */
  @keyframes flash {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .flash-animation {
    animation: flash 2s ease-in-out infinite;
  }

  /* Scroll指示器 */
  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    mix-blend-mode: difference;
    color: #FFFFFF;
  }

  .scroll-text {
    font-family: 'Inter', sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.2em;
  }

  .scroll-arrow {
    animation: bounce 1.5s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "select",
      "id": "hero_type",
      "label": "Hero类型",
      "options": [
        {
          "value": "image",
          "label": "图片"
        },
        {
          "value": "video",
          "label": "视频"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景图片"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "视频URL",
      "info": "输入视频文件URL（MP4格式）"
    },
    {
      "type": "text",
      "id": "heading_line1",
      "label": "主标题第一行",
      "default": "PAS"
    },
    {
      "type": "text",
      "id": "heading_line2",
      "label": "主标题第二行",
      "default": "A PAS"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "副标题",
      "default": "AUTUMN / WINTER 2024"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "显示Scroll指示器",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "遮罩层透明度",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "%"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image"
    }
  ]
}
{% endschema %}
