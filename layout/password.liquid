{% comment %}
  密码保护页面布局 - 装修期间使用
  极简黑色背景 + 白色大写文字
{% endcomment %}

<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#000000">

  <title>{{ shop.name }}</title>

  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- 基础样式 -->
  {{ 'base.css' | asset_url | stylesheet_tag }}

  <style>
    /* 密码页专用样式 */
    .password-page {
      min-height: 100vh;
      background: #000000;
      color: #FFFFFF;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-family: 'Inter', sans-serif;
      text-transform: uppercase;
      padding: 40px 20px;
    }

    .password-logo {
      font-size: 32px;
      font-weight: 700;
      letter-spacing: 0.2em;
      margin-bottom: 60px;
    }

    .password-title {
      font-size: 14px;
      font-weight: 400;
      letter-spacing: 0.1em;
      color: #888888;
      margin-bottom: 20px;
    }

    .password-headline {
      font-size: clamp(32px, 8vw, 72px);
      font-weight: 900;
      letter-spacing: 0.05em;
      line-height: 1;
      text-align: center;
      margin-bottom: 60px;
    }

    .password-form {
      width: 100%;
      max-width: 400px;
    }

    .password-input-wrapper {
      display: flex;
      border: 1px solid #FFFFFF;
    }

    .password-input {
      flex: 1;
      background: transparent;
      border: none;
      color: #FFFFFF;
      padding: 16px 20px;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .password-input::placeholder {
      color: #888888;
    }

    .password-input:focus {
      outline: none;
    }

    .password-submit {
      background: #FFFFFF;
      color: #000000;
      border: none;
      padding: 16px 30px;
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .password-submit:hover {
      background: #888888;
      color: #FFFFFF;
    }

    .password-footer {
      position: fixed;
      bottom: 40px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 11px;
      color: #888888;
      letter-spacing: 0.1em;
    }

    .password-social {
      display: flex;
      gap: 24px;
      margin-top: 40px;
    }

    .password-social a {
      color: #FFFFFF;
      transition: color 0.3s ease;
    }

    .password-social a:hover {
      color: #888888;
    }

    .password-error {
      color: #ff4444;
      font-size: 12px;
      margin-top: 16px;
      text-align: center;
    }
  </style>

  {{ content_for_header }}
</head>

<body class="password-page">
  {% comment %} 修改LOGO文字在这里 {% endcomment %}
  <div class="password-logo">PAS A PAS</div>

  <div class="password-title">{{ 'general.password_page.opening_soon' | t }}</div>
  <h1 class="password-headline">
    {{ 'general.password_page.spread_the_word' | t }}
  </h1>

  {% form 'storefront_password', class: 'password-form' %}
    <div class="password-input-wrapper">
      <input
        type="password"
        name="password"
        placeholder="{{ 'general.password_page.password' | t }}"
        class="password-input"
        autofocus
      >
      <button type="submit" class="password-submit">
        {{ 'general.password_page.enter' | t }}
      </button>
    </div>
    {% if form.errors %}
      <div class="password-error">{{ form.errors | default_errors }}</div>
    {% endif %}
  {% endform %}

  {% if settings.social_instagram_link != blank or settings.social_tiktok_link != blank %}
    <div class="password-social">
      {% if settings.social_instagram_link != blank %}
        <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
        </a>
      {% endif %}
      {% if settings.social_tiktok_link != blank %}
        <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener" aria-label="TikTok">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
          </svg>
        </a>
      {% endif %}
    </div>
  {% endif %}

  <div class="password-footer">
    &copy; {{ "now" | date: "%Y" }} {{ shop.name }}
  </div>

  {{ content_for_layout }}
</body>
</html>
